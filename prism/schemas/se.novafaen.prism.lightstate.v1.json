{
  "$schema": "https://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "power": {
      "type": "boolean"
    },
    "color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3
    },
    "kelvin": {
      "type": "integer",
      "minimum": 1000,
      "maximum": 9000
    },
    "brightness": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "duration": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [],
  "additionalProperties": false
}
